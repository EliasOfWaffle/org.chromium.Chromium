From: Ryan Gonzalez <rymg19@gmail.com>
Date: Thu, 1 Oct 2020 16:39:00 -0500
Subject: [PATCH] Ensure libffmpeg.so is in the rpath of binaries

---
 BUILD.gn | 6 ++++++
 1 file changed, 6 insertions(+)

diff --git a/third_party/ffmpeg/BUILD.gn b/third_party/ffmpeg/BUILD.gn
index 276e0d8065..f161baccfd 100755
--- a/third_party/ffmpeg/BUILD.gn
+++ b/third_party/ffmpeg/BUILD.gn
@@ -454,6 +454,12 @@ if (is_component_ffmpeg) {
     if (is_mac && !is_component_build) {
       ldflags += [ "-Wl,-install_name,@rpath/libffmpeg.dylib" ]
     }
+
+    if (is_linux && !is_component_build) {
+      all_dependent_configs = [
+        "//build/config/gcc:rpath_for_built_shared_libraries",
+      ]
+    }
   }
 } else {
   source_set("ffmpeg") {
